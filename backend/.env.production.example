# Backend Node.js Environment Variables - PRODUCTION
# Copy this file to .env.production and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-domain.com

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000

# Flask API (InDesign automation)
FLASK_API_URL=https://your-flask-api.com
FLASK_API_TOKEN=your-secure-token-here

# InDesign Templates Path (production server)
INDESIGN_TEMPLATES_PATH=/var/www/magflow/templates

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/magflow/backend.log

# Security
JWT_SECRET=your-very-long-random-secret-key-here
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-newrelic-key-here

# Database Backup (optional)
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_S3_BUCKET=your-s3-bucket-name

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAIL=admin@your-domain.com

# Performance
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT_MS=30000
OPENAI_TIMEOUT_MS=30000
FLASK_TIMEOUT_MS=120000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
